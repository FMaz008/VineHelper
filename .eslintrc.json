{
	"env": {
		"browser": true,
		"node": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2022
	},
	"rules": {
		"no-console": "warn",
		"no-undef": "warn",
		"no-unsafe-finally": "warn",
		"no-unused-vars": "warn"
	},
	"overrides": [
		{
			"files": ["**/*.test.js", "**/tests/**/*.js", "**/unit_tests/**/*.js"],
			"env": {
				"jest": true
			}
		}
	]
}
