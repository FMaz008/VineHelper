{
	"name": "vinehelper",
	"version": "3.6.1",
	"description": "Improve the Amazon Vine experience.",
	"workspaces": [
		"/*"
	],
	"scripts": {
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"lint": "eslint .",
		"qlint": "eslint . --quiet",
		"build:release": "node build.js",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/FMaz008/VineHelper.git"
	},
	"keywords": [
		"amazon",
		"vine",
		"helper"
	],
	"author": "VineHelper <https://vinehelper.ovh/>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/FMaz008/VineHelper/issues"
	},
	"homepage": "https://github.com/FMaz008/VineHelper#readme",
	"dependencies": {
		"@kurkle/color": "^0.3.4",
		"canvas-confetti": "^1.9.3",
		"jest-environment-jsdom": "^30.0.2",
		"socket.io": "^4.8.0",
		"vine-styling": "https://github.com/FMaz008/vine-styling.git#main"
	},
	"devDependencies": {
		"@babel/core": "^7.27.4",
		"@babel/preset-env": "^7.26.0",
		"@commitlint/cli": "^19.2.1",
		"@commitlint/config-conventional": "^19.1.0",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.29.0",
		"@release-it/bumper": "^6.0.1",
		"@types/node": "^24.0.3",
		"archiver": "^7.0.1",
		"babel-jest": "^29.7.0",
		"eslint": "latest",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^16.2.0",
		"husky": "^9.0.11",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"release-it": "^17.1.1",
		"typescript": "^5.8.3"
	},
	"lint-staged": {
		"*.js": [
			"yarn prettier --write",
			"yarn eslint --fix"
		],
		"*.{md, html, css}": "yarn prettier --write"
	},
	"release-it": {
		"git": {
			"requireCleanWorkingDir": false
		},
		"github": {
			"release": true,
			"assets": [
				"VH-*.zip"
			]
		},
		"hooks": {
			"before:bump": [
				"yarn test"
			],
			"after:bump": [
				"yarn build:release"
			]
		},
		"npm": {
			"publish": false
		},
		"plugins": {
			"@release-it/bumper": {
				"out": "manifest*.json"
			}
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"packageManager": "yarn@3.6.4"
}
